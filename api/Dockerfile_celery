FROM python:3.7-alpine


RUN apk update
RUN #apt-get install libsqlite3-mod-spatialite -y
RUN apk install unixodbc-dev -y
RUN apk install freetds-dev -y
COPY ./celery_requirements.txt /api/

ENV PYTHONDONTWRITEBYTECODE 1
